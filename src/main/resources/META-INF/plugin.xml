<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>com.github.raumo0.languageplugindemo</id>
    <name>language-plugin-demo</name>
    <vendor>raumo0</vendor>

    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.java</depends>

    <resource-bundle>messages.MyBundle</resource-bundle>

    <extensions defaultExtensionNs="com.intellij">
        <fileType
                name="Move File"
                implementationClass="com.github.raumo0.languageplugindemo.MoveFileType"
                fieldName="INSTANCE"
                language="Move"
                extensions="move"/>
        <toolWindow factoryClass="com.github.raumo0.languageplugindemo.toolWindow.MyToolWindowFactory" id="MyToolWindow"/>
        <postStartupActivity implementation="com.github.raumo0.languageplugindemo.startup.MyProjectActivity" />
        <lang.parserDefinition
                language="Move"
                implementationClass="com.github.raumo0.languageplugindemo.MoveParserDefinition"/>
        <lang.syntaxHighlighterFactory
                language="Move"
                implementationClass="com.github.raumo0.languageplugindemo.MoveSyntaxHighlighterFactory"/>
        <colorSettingsPage
                implementation="com.github.raumo0.languageplugindemo.MoveColorSettingsPage"/>
        <completion.contributor
                language="Move"
                implementationClass="com.github.raumo0.languageplugindemo.MoveCompletionContributor"/>
        <lang.refactoringSupport
                language="Move"
                implementationClass="com.github.raumo0.languageplugindemo.MoveRefactoringSupportProvider"/>
        <lang.findUsagesProvider
                language="Move"
                implementationClass="com.github.raumo0.languageplugindemo.MoveFindUsagesProvider"/>
        <lang.psiStructureViewFactory
                language="Move"
                implementationClass="com.github.raumo0.languageplugindemo.MoveStructureViewFactory"/>
        <navbar implementation="com.github.raumo0.languageplugindemo.MoveStructureAwareNavbar"/>
        <lang.formatter
                language="Move"
                implementationClass="com.github.raumo0.languageplugindemo.MoveFormattingModelBuilder"/>
        <codeStyleSettingsProvider
                implementation="com.github.raumo0.languageplugindemo.MoveCodeStyleSettingsProvider"/>
        <langCodeStyleSettingsProvider
                implementation="com.github.raumo0.languageplugindemo.MoveLanguageCodeStyleSettingsProvider"/>
        <lang.commenter
                language="Move"
                implementationClass="com.github.raumo0.languageplugindemo.MoveCommenter"/>
        <spellchecker.support
                language="Move"
                implementationClass="com.github.raumo0.languageplugindemo.MoveSpellcheckingStrategy"/>
    </extensions>
</idea-plugin>
